<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="Border.song">
    <Setter Property="CornerRadius" Value="10"></Setter>
    <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="10,2,10,2"></Setter>
    <Style Selector="^:pointerover">
      <Setter Property="Background" Value="{DynamicResource PrimaryGradientHover}"></Setter>
      <Setter Property="RenderTransform">
        <Setter.Value>
          <ScaleTransform ScaleX="1.01" ScaleY="1.05"></ScaleTransform>
        </Setter.Value>
      </Setter>
    </Style>
  </Style>
  <!--Card style-->
  <Style Selector="Border.card">
    <Setter Property="Opacity" Value="1"/>
    <Setter Property="Width" Value="250"></Setter>
    <Setter Property="Height" Value="250"></Setter>
    <Setter Property="CornerRadius" Value="15"></Setter>
    <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="10"></Setter>
    <Style Selector="^:pointerover">
      <Setter Property="CornerRadius" Value="20"></Setter>
      <Setter Property="Background" Value="{DynamicResource PrimaryGradientHover}"></Setter>
      <Setter Property="Padding" Value="5"></Setter>
      <Setter Property="RenderTransform">
        <Setter.Value>
          <ScaleTransform ScaleX="1.05" ScaleY="1.05"></ScaleTransform>
        </Setter.Value>
      </Setter>
    </Style>
  </Style>

  
  <Style Selector="Border.playlist">
    <Setter Property="CornerRadius" Value="10"></Setter>
    <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="10,2,10,2"></Setter>
  </Style>
  <Style Selector="Border.playlist:pointerover">
    <Setter Property="CornerRadius" Value="10"></Setter>
    <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="10,2,10,2"></Setter>
    <Setter Property="RenderTransform">
      <Setter.Value>
        <ScaleTransform ScaleX="1.01" ScaleY="1.05"></ScaleTransform>
      </Setter.Value>
    </Setter>
  </Style>
  <Style Selector="Border.podcast">
    <Setter Property="Opacity" Value="1"/>
    <Setter Property="Width" Value="500"></Setter>
    <Setter Property="Height" Value="250"></Setter>
    <Setter Property="CornerRadius" Value="5"></Setter>
    <Setter Property="Background" Value="{DynamicResource PrimaryGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="10"></Setter>
  </Style>
  
  
  <Style Selector="Border.base">
    <Setter Property="CornerRadius" Value="10"></Setter>
    <Setter Property="Background" Value="{DynamicResource BackgroundGradient}"></Setter>
    <Setter Property="Padding" Value="2"></Setter>
    <Setter Property="Margin" Value="2"></Setter>
  </Style>
  <Style Selector="StackPanel.baseV">
    <Setter Property="Orientation" Value="Vertical"></Setter>
    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    <Setter Property="VerticalAlignment" Value="Center"></Setter>
  </Style>
  <Style Selector="StackPanel.baseH">
    <Setter Property="Orientation" Value="Horizontal"></Setter>
    <Setter Property="VerticalAlignment" Value="Center"></Setter>
    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
  </Style>
  <Style Selector="StackPanel.leftH">
    <Setter Property="Orientation" Value="Horizontal"></Setter>
    <Setter Property="VerticalAlignment" Value="Center"></Setter>
    <Setter Property="HorizontalAlignment" Value="Left"></Setter>
  </Style>
  <Style Selector="StackPanel.rightH">
    <Setter Property="Orientation" Value="Horizontal"></Setter>
    <Setter Property="HorizontalAlignment" Value="Right"></Setter>
    <Setter Property="VerticalAlignment" Value="Center"></Setter>
  </Style>
  <Style Selector="StackPanel.leftV">
    <Setter Property="HorizontalAlignment" Value="Left"></Setter>
    <Setter Property="VerticalAlignment" Value="Center"></Setter>
  </Style>
</Styles>
